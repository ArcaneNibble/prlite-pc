<launch>
	<!-- Load configuration -->
    <rosparam file="$(find ax12_arm_joycontroller)/config/joyarmbridge.yaml" command="load"/>
	
    <!-- Load the joystick service -->
    <node name="joystick_service" pkg="joy" type="joy_node" args="" output="screen"/>

    <!-- Load the smart arm service -->
    <include file="$(find smart_arm_controller)/launch/smart_arm_standalone.launch" />

    <!-- Launch our controller service -->
    <node name="ax12_arm_joycontroller" pkg="ax12_arm_joycontroller" type="joyarmbridge" args="" output="screen" />    
</launch>
